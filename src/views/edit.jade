extends layout

block content
  link(rel='stylesheet', href='/pages/create/create.css')
  link(rel='stylesheet', href='/bootstrap/css/bootstrap-tagsinput.css')

  #create_wrap
    .create_head
      h1.title #{title}
      .first
        img(src='/images/create1.png')
        p.step Step 1
        p.text 填写基本信息
      .second
        img(src='/images/create2_gray.png')
        p.step.gray Step 2
        p.text.gray 上传封面图片
      .third
        img(src='/images/create3.png')
        p.wait 活动等待审核
    
    form.form-horizontal(method="post", action="/s-activity-save")
        .container
          .row
            input(type="hidden",name="activity[_id]", value="#{activity._id}")
            .form-group
                label.col-sm-2.control-label(for="inputTitle") 活动标题
                .col-sm-10
                    input#inputTitle.form-control(type="text", name="activity[title]", value="#{activity.title}" ,required)
            .form-group
                label.col-sm-2.control-label(for="inputTime") 开始时间
                .col-sm-10
                    input#inputTime.form-control(type="text", name="activity[time]", value="#{moment(activity.time).format('YYYY/MM/DD HH:mm')}" , required)
            .form-group                
                input#lng(type="text", name="activity[lng]", class="disappear", value='#{activity.lng}')
                input#lat(type="text", name="activity[lat]", class="disappear", value='#{activity.lat}')
                label.col-sm-2.control-label(for="inputPlace") 活动地点
                .col-sm-10
                  input#inputPlace.form-control(type="text", name="activity[place]",value="#{activity.place}")
                  div#mapResult
                #map_wrap
                  #mapContainer
            .form-group
                label.col-sm-2.control-label(for="inputCover") 活动Tag
                .col-sm-10
                    - tagList = tagNames.join(",")
                    input#inputTags.form-control(type="text", value=actTags, name="activity[tags]", data-role="tagsinput")
                    br
                    - for (var i = 0; i < tagNames.length; ++i)
                      button.btn-addTag.btn.btn-default(type="button") #{tagNames[i]}
            .form-group
                label.col-sm-2.control-label(for="inputDetail") 活动详情
                .col-sm-10
                    textarea#inputDetail.form-control(rows=10, name="activity[detail]", required) #{activity.detail}
            .form-group
                label.col-sm-2.control-label(for="inputCover") 报名是否需要真实信息
                label.checkbox-inline
                  input(type="radio", name="activity[need_info]", value=1, checked, id="need_info_true")
                  label(for="need_info_true")
                    span 是
                label.checkbox-inline
                  input(type="radio", name="activity[need_info]", value=0, id="need_info_false")
                  label(for="need_info_false")
                    span 否
        button.next(type="submit") 下一步

  script(src="/bootstrap/js/bootstrap-tagsinput.js")
  script(type='text/javascript' src='http://webapi.amap.com/maps?v=1.3&key=9ab26b8051714a36df10a84611a02d45')
  script(src="/pages/edit/map.js")
  script(src="/pages/create/tagsinput.js")
