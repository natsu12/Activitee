extends layout

block content
  h1 #{title}
  p 用户：#{user.username}
  .container
      .row
          form.form-horizontal(method="post", action="/s-activity-save")
              .form-group
                  label.col-sm-2.control-label(for="inputTitle") 活动名称
                  .col-sm-10
                      input#inputTitle.form-control(type="text", name="activity[title]", required)
              .form-group
                  label.col-sm-2.control-label(for="inputDetail") 活动详情
                  .col-sm-10
                      textarea#inputDetail.form-control(rows=10, name="activity[detail]", required)
              .form-group
                  label.col-sm-2.control-label(for="inputTime") 时间
                  .col-sm-10
                      input#inputTime.form-control(type="text", name="activity[time]", required)
              .form-group
                  label.col-sm-2.control-label(for="inputPlace") 地点
                  .col-sm-10
                      input#inputPlace.form-control(type="text", name="activity[place]", required)
              .form-group
                  label.col-sm-2.control-label(for="inputPlace") 主办方其他信息
                  .col-sm-10
                      textarea#inputHost.form-control(rows=5, name="activity[host_info]", required)

              .form-group
                  label.col-sm-2.control-label(for="inputCover") 是否需要真实信息
                  label.checkbox-inline
                    input(type="radio",name="activity[need_info]",value=1,checked)
                    |需要
                  label.checkbox-inline
                    input(type="radio",name="activity[need_info]",value=0)
                    |不需要
              .form-group
                  .col-sm-offset-2.col-sm-10
                    button.btn.btn-default(type="submit") 提交

  script(src="/livescript/create.js")

